---
// Botón flotante de WhatsApp para Tiza Go con glasmorfismo
const whatsappUrl =
  "https://wa.me/521XXXXXXXXXX?text=Hola%2C%20quiero%20registrar%20mi%20negocio%20en%20Tiza%20Go";
---

<!-- Botón flotante de WhatsApp mejorado -->
<div class="fixed bottom-6 right-6 z-50 group">
  <!-- Botón principal -->
  <a
    href={whatsappUrl}
    target="_blank"
    rel="noopener"
    class="glass hover:glass-dark bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white rounded-full shadow-2xl p-4 flex items-center justify-center transition-all duration-300 transform hover:scale-110 animate-glow relative overflow-hidden"
    aria-label="Contáctanos por WhatsApp"
  >
    <!-- Efecto de brillo en hover -->
    <div
      class="absolute inset-0 bg-gradient-to-r from-green-400 to-green-500 rounded-full opacity-0 group-hover:opacity-70 transition-opacity duration-300 blur"
    >
    </div>

    <!-- Icono de WhatsApp -->
    <svg
      class="w-8 h-8 relative z-10 animate-pulse"
      fill="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.463 3.488"
      ></path>
    </svg>

    <!-- Ondas animadas -->
    <div
      class="absolute inset-0 rounded-full border-2 border-green-400 opacity-0 group-hover:opacity-100 animate-ping"
    >
    </div>
    <div
      class="absolute inset-0 rounded-full border-2 border-green-300 opacity-0 group-hover:opacity-100 animate-ping"
      style="animation-delay: 0.3s;"
    >
    </div>
  </a>

  <!-- Tooltip -->
  <div
    class="absolute bottom-full right-0 mb-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"
  >
    <div
      class="glass-dark rounded-xl px-4 py-2 text-white text-sm font-medium whitespace-nowrap relative"
    >
      💬 ¡Regístrate GRATIS!
      <!-- Flecha del tooltip -->
      <div
        class="absolute top-full right-4 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-white/20"
      >
      </div>
    </div>
  </div>

  <!-- Notificación flotante -->
  <div
    class="absolute -top-2 -right-2 w-6 h-6 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full flex items-center justify-center animate-bounce"
  >
    <span class="text-white text-xs font-bold">!</span>
  </div>
</div>

<!-- Elementos decorativos alrededor del botón -->
<div
  class="fixed bottom-20 right-20 w-4 h-4 bg-green-500/30 rounded-full animate-ping z-40"
>
</div>
<div
  class="fixed bottom-32 right-12 w-2 h-2 bg-accent-500/30 rounded-full animate-ping z-40"
  style="animation-delay: 1s;"
>
</div>
<div
  class="fixed bottom-12 right-28 w-3 h-3 bg-primary-500/30 rounded-full animate-ping z-40"
  style="animation-delay: 2s;"
>
</div>

<style>
  /* Animación personalizada para el botón */
  @keyframes float-custom {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  .animate-float-custom {
    animation: float-custom 2s ease-in-out infinite;
  }
</style>

<script>
  // Añadir clase de animación flotante
  document.addEventListener("DOMContentLoaded", function () {
    const whatsappButton = document.querySelector(
      'a[aria-label="Contáctanos por WhatsApp"]'
    );
    if (whatsappButton) {
      whatsappButton.classList.add("animate-float-custom");
    }
  });
</script>
