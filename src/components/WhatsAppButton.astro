---
// Botón flotante de WhatsApp para Tiza Go
const whatsappUrl =
  "https://wa.me/521XXXXXXXXXX?text=Hola%2C%20quiero%20registrar%20mi%20negocio%20en%20Tiza%20Go";
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener"
  class="fixed z-50 bottom-6 right-6 bg-green-500 hover:bg-green-600 text-white rounded-full shadow-lg p-4 flex items-center justify-center transition-all duration-200 animate-bounce"
  aria-label="Contáctanos por WhatsApp"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="w-7 h-7"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M20.25 12c0-4.556-3.694-8.25-8.25-8.25S3.75 7.444 3.75 12c0 1.386.336 2.693.93 3.844L3 21l5.344-1.68A8.212 8.212 0 0012 20.25c4.556 0 8.25-3.694 8.25-8.25z"
    ></path>
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M8.625 9.75a3.375 3.375 0 006.75 0"></path>
  </svg>
</a>
