---
// Componente de slogans rotativos para Tiza Go con glasmorfismo
const slogans = [
  "🏍️ Desde el mercado al fraccionamiento, volando con Tiza Go",
  "🚀 Aquí no hay Uber Eats, pero sí hay Tiza Go",
  "⚡ Más rápido que el de la bici del centro",
  "🌟 Tu negocio local, ahora digital",
  "💨 Entregas express en toda Tizayuca",
];
---

<section class="py-16 relative overflow-hidden">
  <!-- Contenedor principal con glasmorfismo -->
  <div class="max-w-6xl mx-auto px-4">
    <div
      class="glass rounded-3xl p-8 md:p-12 text-center relative overflow-hidden"
    >
      <!-- Efectos de fondo -->
      <div
        class="absolute inset-0 bg-gradient-to-r from-primary-500/20 to-accent-500/20 rounded-3xl animate-pulse"
      >
      </div>

      <!-- Contenido principal -->
      <div class="relative z-10">
        <!-- Título -->
        <h2
          class="text-2xl md:text-3xl font-bold text-white mb-8 animate-fade-in"
        >
          💫 Lo que dicen de nosotros
        </h2>

        <!-- Slogan rotativo -->
        <div class="relative h-24 md:h-32 flex items-center justify-center">
          <div
            class="text-2xl md:text-4xl lg:text-5xl font-black text-white transition-all duration-1000 transform px-4 leading-tight"
            data-slogan
            style="text-shadow: 0 0 20px rgba(220, 38, 38, 0.5);"
          >
            {slogans[0]}
          </div>
        </div>

        <!-- Indicadores -->
        <div class="flex justify-center gap-2 mt-8">
          {
            slogans.map((_, index) => (
              <div
                class="w-3 h-3 rounded-full bg-white/30 transition-all duration-500 slogan-indicator"
                data-index={index}
                class:list={index === 0 ? "bg-primary-500 scale-125" : ""}
              />
            ))
          }
        </div>
      </div>

      <!-- Elementos decorativos -->
      <div
        class="absolute top-4 left-4 w-8 h-8 bg-accent-500/30 rounded-full animate-ping"
      >
      </div>
      <div
        class="absolute bottom-4 right-4 w-6 h-6 bg-primary-500/30 rounded-full animate-ping"
        style="animation-delay: 1s;"
      >
      </div>
      <div
        class="absolute top-1/2 left-4 w-4 h-4 bg-accent-400/30 rounded-full animate-ping"
        style="animation-delay: 2s;"
      >
      </div>
    </div>
  </div>

  <script type="module">
    const slogans = [
      "🏍️ Desde el mercado al fraccionamiento, volando con Tiza Go",
      "🚀 Aquí no hay Uber Eats, pero sí hay Tiza Go",
      "⚡ Más rápido que el de la bici del centro",
      "🌟 Tu negocio local, ahora digital",
      "💨 Entregas express en toda Tizayuca",
    ];

    let currentIndex = 0;
    const sloganElement = document.querySelector("[data-slogan]");
    const indicators = document.querySelectorAll(".slogan-indicator");

    function updateSlogan() {
      // Animación de salida
      sloganElement.style.transform = "translateY(-20px)";
      sloganElement.style.opacity = "0";

      setTimeout(() => {
        currentIndex = (currentIndex + 1) % slogans.length;
        sloganElement.textContent = slogans[currentIndex];

        // Actualizar indicadores
        indicators.forEach((indicator, index) => {
          if (index === currentIndex) {
            indicator.classList.add("bg-primary-500", "scale-125");
            indicator.classList.remove("bg-white/30");
          } else {
            indicator.classList.remove("bg-primary-500", "scale-125");
            indicator.classList.add("bg-white/30");
          }
        });

        // Animación de entrada
        sloganElement.style.transform = "translateY(0)";
        sloganElement.style.opacity = "1";
      }, 300);
    }

    // Cambiar cada 4 segundos
    setInterval(updateSlogan, 4000);

    // Hacer clickeable los indicadores
    indicators.forEach((indicator, index) => {
      indicator.addEventListener("click", () => {
        currentIndex = index - 1; // -1 porque updateSlogan incrementa
        updateSlogan();
      });
      indicator.style.cursor = "pointer";
    });
  </script>
</section>
